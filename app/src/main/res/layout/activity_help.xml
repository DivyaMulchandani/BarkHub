<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".help">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txthome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@+id/addpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"
            android:contentDescription="to help" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/instanthelp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Instant Help"
            android:textAlignment="center"
            android:backgroundTint="#e91e63"
            />

        <Button
            android:id="@+id/resque"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="RESCUE"
            android:textAlignment="center"
            android:backgroundTint="#00bcd4"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/option">

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtname"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_background"
            android:hint="   Name"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txtcontect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/etname"/>

        <EditText
            android:id="@+id/etcontact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtcontect"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_background"
            android:hint="   Phone Num"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txtanimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animal to be Rescued"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/etcontact"/>

        <EditText
            android:id="@+id/etanimal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtanimal"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_background"
            android:hint="   Animal Name"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txtaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/etanimal"/>

        <EditText
            android:id="@+id/etaddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtaddress"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_background"
            android:hint="   Address"
            android:inputType="textEmailAddress" />

    </RelativeLayout>


</RelativeLayout>